<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.multialarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        /> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SleepActivity"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>
        <activity
            android:name=".RunActivity"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>
        <activity
            android:name=".CookActivity"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>
        <activity
            android:name=".SelfActivity"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>
        <activity
            android:name=".SleepNActivity"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>
        <activity
            android:name=".RunNActivity"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>
        <activity
            android:name=".CookNActivity"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>
        <activity
            android:name=".SelfNActivity"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>
        <activity
            android:name=".ShakePhone"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>
        <receiver
            android:name=".AlarmReceiver"
            android:process=":remote" />
    </application>

</manifest>
